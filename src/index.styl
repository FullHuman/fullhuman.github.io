html
body
  width 100vw
  max-width 100%
  margin 0
  padding 0

.center
  display flex
  align-items center
  justify-content center

.inline
  display inline-flex

.introduction
  height 100vh
  color white
  font-size 2rem
  transition height 2s cubic-bezier(.77,0,.175,1) 3s

.transitioned
  height 4rem

.object-contain
  object-fit contain

.cursor
  animation appear 0.5s linear 0s infinite alternate

@keyframes appear
  from
    opacity 1
  to
    opacity 0

// logo fullscreen section

.logo-fullscreen
  height calc(100vh - 4rem)

.logo
  max-width 90vw
  width 500px
  height auto